<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="20dp"
    android:id="@+id/parent_card_item"
    android:paddingTop="20dp"
    android:paddingRight="20dp"

    xmlns:app="http://schemas.android.com/apk/res-auto">
<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
<android.support.v7.widget.CardView
    android:id="@+id/board_list_list_cardview"
    android:layout_width="320dp"
    app:cardBackgroundColor="#00ffffff"
    android:background="@drawable/card_view_list_of_board"
    app:cardElevation="0dp"
    android:layout_height="60dp">

    <ImageView
        android:background="@drawable/card_view_list_of_board"
        android:scaleType="fitXY"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <TextView
        android:id="@+id/textViewOptions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30dp"
       android:layout_gravity="right|center_vertical"
        android:textColor="#ffffffff"
        android:layout_marginRight="30dp"
        android:text="&#8942;"
        android:textAppearance="?android:textAppearanceLarge" />

<TextView
    android:textSize="18dp"

    android:layout_marginLeft="20dp"
    android:textColor="#ffffffff"
    android:textStyle="bold"
    android:layout_gravity="center_vertical"
    android:id="@+id/list_title_txt"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" />
    <EditText
        android:visibility="gone"
        android:textSize="18dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:textColor="#ffffffff"
        android:textStyle="bold"

        android:id="@+id/list_title_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</android.support.v7.widget.CardView>
    <android.support.v7.widget.RecyclerView

        android:layout_width="320dp"
        android:background="#00ffffff"
        android:id="@+id/board_list_card_recycler"
        android:layout_marginRight="20dp"
        android:layout_weight="1"
        android:layout_height="0dp">
    </android.support.v7.widget.RecyclerView>
    <Button
        android:text="Add a card...."
        android:textAllCaps="false"
        android:textColor="#ffffffff"
        android:id="@+id/card_create_btn"
        android:paddingRight="20dp"
        android:paddingLeft="20dp"
        android:textSize="20dp"
        android:gravity="left|center_vertical"
        android:layout_marginBottom="20dp"
        android:background="@drawable/add_card_button_back"
        android:layout_marginTop="0dp"
        android:layout_width="320dp"
        android:layout_height="wrap_content" />
    <Button
        android:text="Add list...."
        android:gravity="left|center_vertical"
        android:textAllCaps="false"
        android:textColor="#ffffffff"
        android:visibility="gone"
        android:textSize="19dp"
        android:paddingLeft="20dp"
        android:id="@+id/create_list_btn"
        android:paddingRight="20dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/add_list_btn_drawable"
        android:layout_marginTop="0dp"
        android:layout_width="320dp"
        android:layout_height="wrap_content" />
</LinearLayout>
</LinearLayout>