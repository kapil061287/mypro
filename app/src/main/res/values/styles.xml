<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="collepse_actionbar" parent="TextAppearance.AppCompat.Title">
        <item name="android:textColor">#ff000000</item>
    </style>

    <style name="textinputl">
        <item name="android:textColorHint">#ff999999</item>
        <item name="android:textSize">20sp</item>
        <item name="colorAccent">#ff000000</item>
        <item name="colorControlNormal">#ff000000</item>
        <item name="colorControlActivated">#ff000000</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AlertDialogCustom" parent="@android:style/Theme.DeviceDefault.Dialog">
        <item name="android:textColor">#325132</item>
        <item name="android:typeface">monospace</item>
        <item name="android:background">@drawable/board_create_dialog_drw</item>
        <item name="android:textSize">10sp</item>
    </style>

    <style name="search_box" parent="Widget.AppCompat.SearchView.ActionBar">
        <item name="android:editTextColor">#ffffffff</item>
        <item name="android:textColor">#ffffffff</item>
        <item name="android:textColorHint">#77ffffff</item>
    </style>
</resources>
